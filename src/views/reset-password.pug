extend index 
  
block content 
    form(id='reset-password-form' class = 'flex flex-col gap-4 w-[90%] max-w-[400px]') 
      input(
        type = 'password'
        name = 'password'
        id= 'password'
        placeholder = 'New password'
        class = 'bg-transparent p-2 border-2 border-slate-800 rounded-xl outline-0 text-slate-900'
      )
      div(class = 'flex flex-col-reverse md:flex-row gap-2')
        button(
          type = 'submit'
          class = 'flex-1 bg-slate-900 text-slate-100 border-2 border-slate-900 font-semibold p-2 rounded-xl'
        ) Confirm
